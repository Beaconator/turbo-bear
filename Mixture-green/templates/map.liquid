{% block title %}Green Analytics | Demo{% endblock %}
{% block content %}
  <div class="hero-unit">

<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.css" />

    {{ "portfolioJs/jquery.main.min.js" | asset_url | script_tag }}
<script src="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js"></script>



<div id="map" style="width: 1000px; height: 600px"></div>



<script>

        var x = 0;
        var y = 0;
        var defaultX = 51.50;
        var defaultY = -0.09;
        var map = L.map('map').setView([37.8702234, -122.26818,17], 13);


    L.tileLayer('http://{s}.tile.cloudmade.com/e8aee90b7fbe40fdbfbb43805a148a53/997/256/{z}/{x}/{y}.png', {
      maxZoom: 18,
      attribution: 'Made with <3 using OpenMaps'
    }).addTo(map);


    L.polygon([
      [37.87756, -122.29036],
      [37.83663, -122.27303],
      [37.85642, -122.21912],
      [37.88461, -122.25243]
    ]).addTo(map).bindPopup("The best bang for your buck!");


    L.marker([37.8702234, -122.26818,17]).addTo(map)
      .bindPopup("<b>Hello world!</b><br />This is Skydeck").openPopup();
            

    L.circle([37.86726, -122.25895,17], 500, {
      color: 'Green',
      fillColor: '#0aff00',
      fillOpacity: 0.5
    }).addTo(map).bindPopup("Buy good weed here.");


    L.circle([37.84355, -122.25157,17], 500, {
      color: 'Red',
      fillColor: '#f03',
      fillOpacity: 0.5
    }).addTo(map).bindPopup("Don't buy weed here!");


    var popup = L.popup();

    function onMapClick(e) {
      popup
        .setLatLng(e.latlng)
        .setContent("You clicked the map at " + e.latlng.toString())
        .addTo(map);
        console.log("Map updated");
    }
    

    map.on('click', onMapClick);
    

  </script>

</div>

{% endblock %}


{% block title %}Green Analytics | Demo{% endblock %}
{% block content %}
  <div class="hero-unit">

<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.css" />

    {{ "portfolioJs/jquery.main.min.js" | asset_url | script_tag }}
<script src="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js"></script>



<div id="map" style="width: 1000px; height: 600px"></div>



<script>

        var x = 0;
        var y = 0;
        var defaultX = 51.50;
        var defaultY = -0.09;
        var map = L.map('map').setView([51.505, -0.09], 13);
       
    L.tileLayer('http://{s}.tile.cloudmade.com/e8aee90b7fbe40fdbfbb43805a148a53/997/256/{z}/{x}/{y}.png', {
      maxZoom: 18,
      attribution: 'Made with <3 using OpenMaps'
    }).addTo(map);


    L.marker([51.5, -0.09]).addTo(map)
      .bindPopup("<b>Hello world!</b><br />I am a popup.").openPopup();
            

    L.circle([51.508, -0.11], 500, {
      color: 'red',
      fillColor: '#f03',
      fillOpacity: 0.5
    }).addTo(map).bindPopup("I am a circle.");

    L.polygon([
      [51.509, -0.08],
      [51.503, -0.06],
      [51.51, -0.047]
    ]).addTo(map).bindPopup("I am a polygon.");


    var popup = L.popup();

    function onMapClick(e) {
      popup
        .setLatLng(e.latlng)
        .setContent("You clicked the map at " + e.latlng.toString())
        .addTo(map);
        console.log("Map updated");
    }
    

    map.on('click', onMapClick);
    

  </script>

</div>

{% endblock %}

